<header>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <img src="/assets/logo.png" width="100px" height="100px", class: "navbar-brand" />
      </div>
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav nav-pre navbar-nav">
          <li class="active"><%= link_to t("menu.home"), root_path %></li>
          <li><%= link_to t("menu.posts"), current_user %></li>
          <li><%= link_to t("users.title"), users_path %></li>
          <li><%= link_to t("chat.chat"), chats_index_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right nav-pre">
          <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= gravatar_for current_user, size: 25 %>
              <%= current_user.name %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t("menu.profile"), current_user %></li>
              <li><%= link_to t("menu.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("menu.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to t("menu.login"), login_path %></a></li>
          <li><%= link_to t("menu.signup"), signup_path %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
